<% include partials/header %>

<div class="contrainer">
    <div class="row">
        <h2 style="text-align: center;">Add new recipe</h2>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/recipes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe_name" placeholder="Recipe name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe_img" placeholder="Recipe image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe_desc" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Add</button>
                </div>
            </form>
            <a href="/recipes">Go back</a>
        </div>
    </div>
</div>

<% include partials/footer %>